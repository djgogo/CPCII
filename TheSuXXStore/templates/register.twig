{% extends "base.twig" %}

{% block stylesheets %}
  <!-- Custom styles for this template -->
  <link href="/css/login.css" rel="stylesheet">
{% endblock %}

{% block content %}

    {{ include('message.twig') }}

    <div class="row main">
        <div class="panel-heading">
            <div class="panel-title text-center">
                <h2 class="title">Register</h2>
                <hr />
            </div>
        </div>

        <div class="main-login main-center">

            <form class="form-horizontal" action="/suxx/register" method="post">

                {# CSRF Protection Token #}
                <input type="hidden" name="csrf" value="{{ session.getValue('token') }}">

                <div class="form-group {% if session.getValue('error').get('username') %}has-error{% endif %}">
                    <label for="username" class="sr-only">Username</label>
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" class="form-control" id="username" name="username"
                                   value="{{ session.getValue('populate').get('username')|e('html_attr') }}" placeholder="Enter your Username">
                        </div>
                        {% if session.getValue('error').get('username') %}
                            <span id="errorBlock" class="help-block"><small>{{ session.getValue('error').get('username') }}</small></span>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group {% if session.getValue('error').get('password') %}has-error{% endif %}">
                    <label for="password" class="sr-only">Password</label>
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" class="form-control" name="passwd" id="password"
                                   value="{{ session.getValue('populate').get('passwd')|e('html_attr') }}" placeholder="Enter your Password"/>
                        </div>
                        {% if session.getValue('error').get('password') %}
                            <span id="errorBlock" class="help-block"><small>{{ session.getValue('error').get('password') }}</small></span>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group {% if session.getValue('error').get('name') %}has-error{% endif %}">
                    <label for="name" class="sr-only">Your Name</label>
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" class="form-control" name="name" id="name"
                                   value="{{ session.getValue('populate').get('name')|e('html_attr') }}" placeholder="Enter your Name"/>
                        </div>
                        {% if session.getValue('error').get('name') %}
                            <span id="errorBlock" class="help-block"><small>{{ session.getValue('error').get('name') }}</small></span>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group {% if session.getValue('error').get('email') %}has-error{% endif %}">
                    <label for="email" class="sr-only">Your Email</label>
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-inbox"></i></span>
                            <input type="text" class="form-control" name="email" id="email"
                                   value="{{ session.getValue('populate').get('email')|e('html_attr') }}" placeholder="Enter your Email"/>
                        </div>
                        {% if session.getValue('error').get('email') %}
                            <span id="errorBlock" class="help-block"><small>{{ session.getValue('error').get('email') }}</small></span>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Register</button>
                    </div>
                </div>
                <div class="form-group login-register">
                    <a href="../loginview">Login</a>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
