{% block stylesheets %}
    <!-- Custom styles for this template -->
    <link rel="stylesheet" type="text/css" href="/css/navigation.css">
{% endblock %}

{% block content %}
    <!-- Static navbar -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="navbar" aria-expanded="false" aria-controls="navbar"></button>
                <a class="navbar-brand" href="/">Address App</a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">

                <!-- The navbar menu -->
                <ul class="nav navbar-nav">
                    <li{% if active == "home" %} class="active"{% endif %}><a href="/">Home</a></li>
                    <li{% if active == "about" %} class="active"{% endif %}><a href="../about">About</a></li>
                    <li{% if active == "info" %} class="active"{% endif %}><a href="#" data-target="#info" data-toggle="modal">?</a></li>
                </ul>

                <!-- The search input -->
                <div class="col-md-4">
                    <form class="navbar-form " role="search" action="/" method="get">
                        <div class="input-group">
                            <input type="text" id="search" name="search" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- The drop down menu -->
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            {% if session.isLoggedIn() %}
                                Welcome, {{ session.getValue('user') }} <b class="caret"></b>
                            {% else %}
                                Sign In <b class="caret"></b>
                            {% endif %}</a>
                        <ul class="dropdown-menu">
                            {% if session.isLoggedIn() %}
                                <li><a href="../logout"><i class="glyphicon glyphicon-off"></i> Logout</a></li>
                            {% else %}
                                <li><a href="../loginview"><i class="glyphicon glyphicon-user"></i> Sign In</a></li>
                                <li><a href="../registerview"><i class="glyphicon glyphicon-cog"></i> Register</a></li>
                            {% endif %}
                        </ul>
                    </li>
                </ul>

            </div><!--/.nav-collapse -->

        </div><!--/.container-fluid -->
    </nav>
{% endblock %}

<!-- Modal HTML -->
{% include 'infomodal.twig' %}

