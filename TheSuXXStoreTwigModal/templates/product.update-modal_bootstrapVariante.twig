<script type="text/javascript" charset="utf-8">
    $('#edit').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal

        var label = button.data('label'); // Extract info from data-* attributes
        var price = button.data('price'); // Extract info from data-* attributes

        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this);
        modal.find('.modal-title').text('You are changing Article: ' + label);
        modal.find('.modal-body input').val(label);
        modal.find('.modal-body input').val(price);
        console.log(label);
    })
</script>


<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <div class="modal-title"></div>
            </div>



            <form method="post" action="/suxx/updateproduct">

                <div class="modal-body">
                    <div class="form-group">
                        <label for="label">Product Label</label>
                        <input type="text" class="form-control" name="label" id="label">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" name="price" id="price">
                    </div>
                </div>

            <div class="modal-footer ">
                <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
